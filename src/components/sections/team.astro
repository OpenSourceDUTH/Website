---
import { getTeamFromPathname, getTeamHeaderFromPathname } from "@/config/landing";
import { Image } from "astro:assets";
import HeaderSection from "./header-section.astro";
import { Button } from "@/components/ui/button";
import { Icon } from "astro-icon/components";

const team = getTeamFromPathname(Astro.url.pathname);
const teamHeader = getTeamHeaderFromPathname(Astro.url.pathname);
---

<section>
  <div class="container flex max-w-7xl flex-col gap-10 py-32 sm:gap-y-16 items-center justify-center">
    <HeaderSection
      label={teamHeader.label}
      title={teamHeader.title}
      subtitle={teamHeader.subtitle}
    />

    <div class="flex flex-wrap gap-5 justify-center items-center">
      {
        team.map((item) => (
          <div class="break-inside-avoid flex justify-center items-center">
            <div class="relative rounded-xl border bg-muted/25">
              <div class="flex flex-col px-4 py-5 sm:p-6">
                <div>
                  <div class="relative mb-4 flex items-center gap-3 justify-center">
                    <span class="relative inline-flex size-10 shrink-0 items-center justify-center rounded-full text-base">
                      <Image
                        width={100}
                        height={100}
                        class="size-full rounded-full border"
                        src={item.image || "/placeholder.svg"}
                        alt={item.name}
                      />
                    </span>
                    <div>
                      <p class="text-sm font-semibold text-foreground">
                        {item.name}
                      </p>
                      <p class="text-sm text-muted-foreground">{item.job}</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

