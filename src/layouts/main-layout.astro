---
import Footer from "@/components/layout/footer.astro";
import Header from "@/components/layout/header.astro";
import { LocalizedNavigationMenu } from "@/components/localized-navigation-menu";
import { cn } from "@/lib/utils";
import BaseLayout from "./base-layout.astro";
import { SheetMobileNav } from "@/components/layout/sheet-mobile-nav";
import { navMenuConfig } from "@/config/nav-menu";
import { navMenuConfigEl } from "@/config/nav-menu.el";
import { ThemeToggle } from "@/components/theme-toggle";
import { siteConfig } from "@/config/site";
import { Icon } from "astro-icon/components";
import { getLocaleFromPath } from "@/lib/locale";

type Props = {
  title: string;
  description?: string;
  mainClass?: string;
};

const { title, description, mainClass } = Astro.props;

// Get current locale and appropriate nav config
const currentLocale = getLocaleFromPath(Astro.url.pathname);
const currentNavConfig = currentLocale === 'el' ? navMenuConfigEl : navMenuConfig;
const isGreek = currentLocale === 'el';
---

<BaseLayout title={title} description={description}>
  <Header className="border-b">
    <!-- if using only normals links  -->
    <!-- <MainNav items={marketingConfig.mainNav} slot="left-header" />
    <SheetMobileNav
      mainNavItems={marketingConfig.mainNav}
      slot="mobile-nav-header"
      client:load
    /> -->

    <!-- if use Navigation Menu on desktop -->
    <LocalizedNavigationMenu slot="left-header" client:load isGreek={isGreek} />
    <SheetMobileNav
      mainNavItems={[...currentNavConfig.links]}
      sidebarNavItems={[
        ...currentNavConfig.pagesNav,
        ...currentNavConfig.examplesNav,
      ]}
      slot="mobile-nav-header"
      client:load
    />

    <div class="flex items-center gap-x-4" slot="right-header">
      <a
        href={siteConfig.links.github}
        target="_blank"
        rel="noreferrer"
        aria-label="github"
      >
        <Icon name="github" class="size-[22px]" />
      </a>
      <ThemeToggle client:load />
    </div>
  </Header>

  <main class={mainClass ?? ""}>
    <slot />
  </main>

  <Footer />
</BaseLayout>
