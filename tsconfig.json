{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "skipLibCheck": true,
    // These seem to conflict with the <span> attribute in the base-head.astro file. Commenting them seems to work and does not break anything else so I am keeping them like this.
    // "jsx": "react-jsx",
    // "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.astro", "src/**/*.d.ts"]
}